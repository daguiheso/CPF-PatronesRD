.Canvas
	width 500px
	overflow hidden //ocultar todo lo que se sale del canvas
	position relative
	&-main
		overflow hidden
	&-menu
		width 200px
		position absolute
		left -200px
		top 0
		--webkit-transition 1s
		&.is-active
			left 0
	&-sidebar
		position absolute
		width 200px
		right -200px
		top 0
		--webkit-transition 1s
		&.is-active
			right 0
